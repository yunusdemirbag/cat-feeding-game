{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist/public"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/health",
      "dest": "/server/api/health.ts"
    },
    {
      "src": "/api/game-state",
      "dest": "/server/api/game-state.ts"
    },
    {
      "src": "/(.*)",
      "dest": "/dist/public/$1"
    }
  ],
  "functions": {
    "server/api/*.ts": {
      "runtime": "nodejs18.x"
    }
  }
} 